<UserControl x:Class="TMSalesManager.Modules.Product.OptionAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TMSalesManager.Modules.Product"
             mc:Ignorable="d" Width="300" Height="150"
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="10,10,10,50">
            <Label Content="Label"/>
            <TextBox Height="23" TextWrapping="Wrap" VerticalContentAlignment="Center" Margin="100,-25,0,0"/>
            <Label></Label>
            <Label Content="Label"/>
            <TextBox Height="50" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="100,-25,0,0"/>
        </StackPanel>
        <Button Content="Button" Margin="0,107,10,10" HorizontalAlignment="Right" Width="116" Click="Button_Click"/>
    </Grid>
</UserControl>
